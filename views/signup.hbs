<form method="POST" action="" enctype="multipart/form-data" class="w-auto p-4" style="border: 1px solid #000;">
    <fieldset>
        <legend>ĐĂNG KÝ</legend>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th><label for="email">Email</label></th>
                    <td>
                        <input class="w-50" type="text" id="email" name="email" placeholder="Vui lòng nhập email">
                    </td>
                </tr>
                <tr>
                    <th><label for="psw">Mật khẩu</label></th>
                    <th>
                        <input class="w-50" id="psw" name="psw" type="password" placeholder="Vui lòng nhập mật khẩu">
                    </th>
                </tr>
                <tr>
                    <th><label for="psw2">Nhập lại mật khẩu</label></th>
                    <th>
                        <input class="w-50" id="psw2" name="psw2" type="password" placeholder="Vui lòng nhập lại mật khẩu">
                    </th>
                </tr>
                <tr>
                    <th>Cấp độ thành viên</th>
                    <th class="d-flex w-75 justify-content-between">
                        <div>
                            <input type="radio" id="silver" name="memberType" value="silver">
                            <label for="silver">Bạc</label><br>
                        </div>
                        <div>
                            <input type="radio" id="gold" name="memberType" value="gold">
                            <label for="gold">Vàng</label><br>
                        </div>
                        <div>
                            <input type="radio" id="platinum" name="memberType" value="platinum">
                            <label for="platinum">Bạch Kim</label>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th>Ảnh đại diện</th>
                    <th>
                        <input type="file" id="member-avatar">
                    </th>
                </tr>
                <tr>
                    <th></th>
                    <th id="img-preview"></th>
                </tr>
                <tr>
                    <th colspan="2">
                        Thông qua việc tạo tài khoản, bạn đồng ý với
                        <a href="#">Điều khoản & Quyền riêng tư của chúng tôi.</a>
                    </th>
                </tr>
            </tbody>
        </table>
        <input type="reset" value="Hủy"></input>
        <input type="submit" value="Đăng ký"></input>
    </fieldset>
</form>

<script>
    const memberAvatar = document.getElementById("member-avatar");
    const imgPreview = document.getElementById("img-preview");
    const resetBtn = document.querySelector("input[type=reset]");
    memberAvatar.addEventListener('change', function () {
        const files = memberAvatar.files[0]
        if (files) {
            console.log('loaded')
            const fileReader = new FileReader()
            fileReader.readAsDataURL(files);
            fileReader.addEventListener("load", function () {
                imgPreview.style.display = "block";
                imgPreview.innerHTML = '<img src="' + this.result + '" width="400px"/>';
            });
        }
    })
    resetBtn.onclick = function(){
        console.log(resetBtn)
        imgPreview.innerHTML = ""
    }
</script>